/* Base Scrollbar */
.scroll-bar {
    -fx-background-color: transparent;
    -fx-pref-width: 8px;
    -fx-pref-height: 8px;
}

/* Scroll Thumb */
.scroll-bar .thumb {
    -fx-background-color: #219a6a;
    -fx-background-radius: 5px;
}

/* Scroll Thumb Hover */
.scroll-bar .thumb:hover {
    -fx-background-color: #18a383;
}

/* Scroll Track */
.scroll-bar .track {
    -fx-background-color: #333;
    -fx-background-radius: 5px;
}

/* Horizontal Scrollbar */
.scroll-bar:horizontal {
    -fx-min-height: 8px;
    -fx-max-height: 8px;
}

/* Vertical Scrollbar */
.scroll-bar:vertical {
    -fx-min-width: 8px;
    -fx-max-width: 8px;
}

/* Remove scrollbar buttons */
.table-view .scroll-bar .decrement-button,
.table-view .scroll-bar .increment-button {
    -fx-background-color: transparent;
    -fx-padding: 0;
    -fx-border-width: 0;
}

.table-view .scroll-bar:vertical .thumb:hover {
    -fx-background-color: #18a383;
}

