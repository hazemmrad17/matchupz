<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="422.0" prefWidth="267.0" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controllers.user.GenerateEmailController">
    <children>
        <TextField fx:id="emailField" prefHeight="26.0" prefWidth="211.0" promptText="Entrez l'email de l'utilisateur" />
        <Button fx:id="generateButton" onAction="#generateQRCode" text="Générer" />
        <Button fx:id="scanButton" onAction="#scanQRCode" text="Scanner QR Code" />
        <ImageView fx:id="qrImageView" fitHeight="250.0" fitWidth="230.0" />
    </children>
    <stylesheets>
        <URL value="@../css/style.css" />
    </stylesheets>
</VBox>
